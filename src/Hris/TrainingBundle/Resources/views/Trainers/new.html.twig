{% extends '::base.html.twig' %}

{% block right_content -%}
    <div class="span12"><div class="span7"<h1> <h3><i class="icon-circle-info icon-largest" title="Show"></i>Adding Trainers Lists</h3></h1></div></div>
    {% set queryParams = app.request.query.all %}
     {% if queryParams['instance_id'] is defined %}
        <form action="{{ path('trainers_create',{'instance_id':queryParams['instance_id']}) }}" method="post" {{ form_enctype(form) }}>
        {% else %}
        <form action="{{ path('trainers_create') }}" method="post" {{ form_enctype(form) }}>
        {% endif %}
        {{ form_widget(form) }}
        <br/>
        <ul class="trainig_actions inline" style="float:left;">
            <li>
                <button type="submit" class="btn">Register</button>
            </li>
            <li>
                {% if queryParams['instance_id'] is defined %}
                    <a href="{{ path('trainers',{'instance_id':queryParams['instance_id']}) }}" class="btn">
                        Back to the list
                    </a>
                    <form action="{{ path('trainers_create',{'instance_id':queryParams['instance_id']}) }}" method="post" {{ form_enctype(form) }}>
                {% else %}
                    <a href="{{ path('trainers') }}" class="btn">
                        Back to the list
                    </a>
                {% endif %}

            </li>
        </ul>
    </form>

{% endblock %}
